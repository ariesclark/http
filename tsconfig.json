{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "strict": false,
    "esModuleInterop": true,
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules/*",
  ]
}
